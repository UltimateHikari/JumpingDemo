#version 330 core

layout(location = 0) in vec3 mPos;
layout(location = 1) in vec3 mColor; //normal actually
layout(location = 2) in vec2 mTexCoords;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

out vec3 fColor;
out vec2 fTexCoords;

void main(){
    //gl_Position = vec4(mPos,1);
    gl_Position = projection*view*model*vec4(mPos,1);
    fColor = mColor;
    fTexCoords = mTexCoords;
}

